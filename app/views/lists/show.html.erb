<h1><%= @list.name %></h1>

<% if @list.tasks.any? %>
  <h4>Tasks:</h4>
  <% @list.tasks.each do |task| %>
    <p><%= task.description %>
    <%= link_to "Edit", edit_list_task_path(@list, task) %> | <%= link_to "Delete", list_task_path(@list, task),
                          :data => {:confirm => "for shursies?",
                          :method => "delete"} %></p>

  <% end %>
<% end %>
<p><%= link_to "Add a task", new_list_task_path(@list) %></p>
<p> <%= link_to "Edit", edit_list_path(@list) %> | <%= link_to "Delete", list_path(@list),
                          :data => {:confirm => "for shursies?",
                          :method => "delete"} %></p>

<p><%= link_to "Return to lists", lists_path %></p>
